#!/bin/bash
# wget https://k-sergey-v.github.io/Scrypt/deb--config-newuser && sudo bash deb--config-newuser
# version by 2025-05-29
# Sergey Krichko
set -e

echo "[newuser][+] Создание пользователя ..."
read -p "Введите имя нового пользователя: " USERNAME

# Проверка: существует ли пользователь
if id "$USERNAME" &>/dev/null; then
    echo "[newuser >>> add] [-] Пользователь '$USERNAME' уже существует."
    usermod -aG sudo "$USERNAME"
    echo "[newuser >>> sudo] [✓] Пользователь $USERNAME добавлен в группу sudo"
else
    # === Ввод пароля ===
    read -s -p "[newuser >>> password] Введите пароль для $USERNAME: " PASSWORD
    echo
    read -s -p "[newuser >>> password] Повторите пароль: " PASSWORD2
    echo

    if [ "$PASSWORD" != "$PASSWORD2" ]; then
        echo "[newuser >>> password] [!] Пароли не совпадают. Прерывание."
        exit 1
    fi

    # === Создание пользователя ===
    echo "[newuser >>> add] Создание пользователя $USERNAME..."
    useradd -m -s /bin/bash "$USERNAME"
    echo "$USERNAME:$PASSWORD" | chpasswd
    echo "[newuser >>> add] [✓] Пользователь $USERNAME создан"

    # === Добавление в группу sudo ===
    usermod -aG sudo "$USERNAME"
    echo "[newuser >>> sudo] [✓] Пользователь $USERNAME добавлен в группу sudo"
fi